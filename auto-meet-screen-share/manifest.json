{
  "manifest_version": 3,
  "name": "Auto Meet Screen Share",
  "description": "Automatically starts Google Meet and screen sharing without manual intervention.",
  "version": "1.0.5",
  "permissions": [
    "storage",
    "alarms"
  ],
  "host_permissions": [
    "*://meet.google.com/*",
    "https://www.unitretradate.it/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["*://meet.google.com/*-*"],
      "js": ["meetContent.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
